#include <iostream>
#include <ctime>
#include <random>

using namespace std;

int main()
{
	srand(time(NULL));
	setlocale(LC_ALL, "Russian");
	cout << "Введите размер массива" << endl;
	int* arr, N;
	cin >> N;
	arr = new int [N];
	for (int i = 0;  i<N; i++) 
	{
		arr[i] = rand() % 10;
	}

	for (int k = 0; k < N; k++) 
	{
		cout << arr[k] << " ";
	}
}
